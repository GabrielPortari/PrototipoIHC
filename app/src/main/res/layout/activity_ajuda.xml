<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como adicionar um alarme?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tPara adicionar um novo alarme, clique no ícone semelhante à esse:\n"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:srcCompat="@drawable/antibiotic" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\tApós isso, siga os menus da próxima tela, entre com o nome do remédio, selecione o tipo, e o horário que será tomado, após isso clique no botao ADICIONAR\n"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como remover um alarme?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tPara remover um alarme, clique no ícone da lixeira, semelhante a esse:\n"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:srcCompat="@drawable/bin" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\tApós clicar na lixeira, a lista com os seus alarmes irá aparecer, você irá selecionar qual quer excluir, e clicar no botão EXCLUIR\n"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como editar um alarme?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tPara editar um alarme, clique no ícone da caneta, semelhante a esse:\n"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:srcCompat="@drawable/edit" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\tApós clicar no icone, a lista com os seus alarmes irá aparecer, você irá selecionar qual quer editar, faça as mudanças desejadas, e clique no botão EDITAR\n"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Onde eu vejo meus alarmes?"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\tSeus alarmes podem ser vistos na tela principal do aplicativo, abaixo do texto escrito SEUS ALARMES.\n"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMERGÊNCIA?"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_error"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\t CASO VOCÊ TENHA ALGUMA EMERGÊNCIA, CLIQUE NO BOTÃO EMERGENCIA NA PARTE DE BAIXO DA TELA PRINCIPAL\n\n\tLÁ VOCÊ ENCONTRARÁ VÁRIOS NÚMEROS DE DISCAGEM RAPÍDA COMO AMBULÂNCIA E POLICIA CASO PRECISE\n\nBASTA CLICAR NA IMAGEM DO TELEFONE E A CHAMADA IRÁ INICIAR"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\n\n" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="VOLTAR" />

</RelativeLayout>